CREATE TABLE TEAM (
    T_ID        VARCHAR2(6)     PRIMARY KEY,
    T_NAME      VARCHAR2(30),
    S_ID        VARCHAR2(30),
    CONFERENCE  VARCHAR2(15),
    DIVISION    VARCHAR2(15),
    DIRECTOR    VARCHAR2(30),
    RANK        NUMBER(2,0)
);
 
