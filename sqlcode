CREATE TABLE STADIUM (
    S_ID        VARCHAR2(9) PRIMARY KEY,
    S_NAME      VARCHAR(30),
    HOMETOWN    VARCHAR(30),
    SEAT        NUMBER(7),
    HOME_T_ID   VARCHAR(6),
    AWAY_T_ID   VARCHAR(6)
); 

